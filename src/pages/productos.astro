---
import BaseLayout from "../layouts/BaseL.astro";
import { Image } from "astro:assets";
import Rojo from "@assets/rojo.jpg";
import Azul from "@assets/azul.jpg";
import Amarillo from "@assets/amarillo.jpg";

const slides = [
  {
    src: Rojo,
    alt: "Maíz Rojo",
    title: "MAÍZ ROJO",
    description:
      "El MAÍZ ROJO es una variedad de maíz nativa de América que destaca por su característico color rojo, que proviene de la presencia de compuestos naturales llamados antocianinas.",
    price: "$200 /kg",
  },
  {
    src: Azul,
    alt: "Maíz Azul",
    title: "MAÍZ AZUL",
    description:
      "El MAÍZ AZUL tiene un sabor único y es conocido por sus beneficios antioxidantes, además de ser un ingrediente clave en platillos tradicionales mexicanos.",
    price: "$180 /kg",
  },
  {
    src: Amarillo,
    alt: "Maíz Verde",
    title: "MAÍZ VERDE",
    description:
      "El MAÍZ VERDE, menos común, es rico en nutrientes y usado en preparaciones frescas y saludables.",
    price: "$190 /kg",
  },
];
let activeSlide = 0;
---

<BaseLayout>
  <main class="flex flex-col items-center p-8">
    <h1 class="text-5xl font-extrabold text-green-700 mb-16">PRODUCTOS</h1>

    <!-- Carousel Body -->
    <div
      class="relative rounded-lg block md:flex items-center bg-gray-100 shadow-xl"
      style="min-height: 25rem;"
    >
      <div
        class="relative w-full md:w-2/5 h-full overflow-hidden rounded-t-lg md:rounded-t-none md:rounded-l-lg"
        style="min-height: 25rem;"
      >
        <Image
          src={Rojo}
          alt="rojo"
          class="absolute inset-0 w-full h-full object-cover object-center"
        />
        <div class="absolute inset-0 w-full h-full bg-green-700 opacity-55">
        </div>
        <div
          class="absolute inset-0 w-full h-full flex items-center justify-center fill-current text-white"
        >
          <p
            id="carousel-title"
            style="font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; font-size:400%;"
          >
            MAÍZ ROJO
          </p>
        </div>
      </div>
      <div
        class="w-full md:w-3/5 h-full flex items-center bg-gray-100 rounded-lg"
      >
        <div class="p-12 md:pr-24 md:pl-16 md:py-12">
          <p class="text-gray-600 text-lg">
            El <span class="text-gray-900">MAÍZ ROJO</span> es una variedad de maíz
            nativa de América que destaca por su característico color rojo, que proviene
            de la presencia de compuestos naturales llamados antocianinas, un tipo
            de antioxidante beneficioso para la salud.
          </p>
          <p class="text-black text-xl mt-2">Precio: $200 /kg</p>
          <a
            class="flex items-baseline mt-3 text-green-500 hover:text-green-700 focus:text-green-700"
            href="/carrito"
          >
            <span>COMPRAR ESTE PRODUCTO</span>
            <span class="text-xs ml-1">&#x279c;</span>
          </a>
        </div>
        <svg
          class="hidden md:block absolute inset-y-0 h-full w-24 fill-current text-gray-100 -ml-12"
          viewBox="0 0 100 100"
          preserveAspectRatio="none"
        >
          <polygon points="50,0 100,0 50,100 0,100"></polygon>
        </svg>
      </div>
      <button
        class="absolute top-0 mt-40 left-0 bg-white rounded-full shadow-md h-12 w-12 text-2xl text-green-700 hover:text-green-500 focus:text-green-500 -ml-6 focus:outline-none focus:shadow-outline"
      >
        <span class="block" style="transform: scale(-1);">&#x279c;</span>
      </button>
      <button
        class="absolute top-0 mt-40 right-0 bg-white rounded-full shadow-md h-12 w-12 text-2xl text-green-700 hover:text-green-500 focus:text-green-500 -mr-6 focus:outline-none focus:shadow-outline"
      >
        <span class="block" style="transform: scale(1);">&#x279c;</span>
      </button>
    </div>
  </main>
</BaseLayout>
