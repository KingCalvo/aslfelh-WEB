---
import BaseLayout from "../layouts/BaseL.astro";
---
<BaseLayout>
	<div class="max-w-4xl mx-auto pl-24 pr-24 py-12 bg-green-100 border border-green-500 rounded-2xl mt-32">
		<h1 class="text-2xl font-bold text-center mb-4">CARRITO DE COMPRAS</h1>
		<table class="w-full border-collapse border border-gray-300 table-fixed">
			<thead>
			  <tr class="bg-gray-200">
				<th class="p-2 border border-black w-1/2">Producto</th>
				<th class="p-2 border border-black w-1/6">Precio</th>
				<th class="p-2 border border-black w-1/6">Cantidad</th>
				<th class="p-2 border border-black w-1/6">Total</th>
			  </tr>
			</thead>
			<tbody>
			  <tr class="border border-black">
				<td class="p-2 border-r border-black">
				  <div class="flex items-center gap-7">
					<input type="checkbox" />
					<div>
					  <p class="font-semibold text-green-600">Semilla de Soya.</p>
					  <p class="text-sm text-gray-600">
						Rica en proteínas, ideal para alimentos humanos y animales. Crecimiento rápido y adaptable a diversos climas.
					  </p>
					</div>
				  </div>
				</td>
				<td class="p-2 text-center border-r border-black">$100</td>
				<td class="p-2 text-center border-r border-black">
				  <input
					type="text"
					value="1kg"
					class="border border-gray-300 rounded p-1 text-center w-16"
				  />
				</td>
				<td class="p-2 text-center">$100</td>
			  </tr>
			  <tr class="border border-black">
				<td class="p-2 border-r border-black">
				  <div class="flex items-center gap-7">
					<input type="checkbox" />
					<div>
					  <p class="font-semibold text-green-600">Semilla de Trigo.</p>
					  <p class="text-sm text-gray-600">
						Variedades resistentes para climas templados. Perfecta para producir harinas de alta calidad.
					  </p>
					</div>
				  </div>
				</td>
				<td class="p-2 text-center border-r border-black">$78</td>
				<td class="p-2 text-center border-r border-black">
				  <input
					type="text"
					value="1ton"
					class="border border-gray-300 rounded p-1 text-center w-16"
				  />
				</td>
				<td class="p-2 text-center">$78,000</td>
			  </tr>
			</tbody>
		</table>				
		<div class="flex justify-between items-center mt-4">
			<div>
				<p class="text-lg font-semibold">Promociones</p>
				<div class="flex items-center gap-2 mt-2">
					<input
					type="text"
					placeholder="Código de promoción"
					class="border border-gray-300 rounded p-2 w-52"
					/>
					<button class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-500 font-bold">
					Listo
					</button>
				</div>
			</div>
			<div class="mt-4 bg-green-200 border border-green-500 rounded-xl w-72 h-14 flex items-center justify-center">
				<p class="text-xl font-semibold text-center">
				  Total: <span class="text-green-800">$78,100.00</span>
				</p>
			</div>			  
		</div>
		<div class="flex flex-col items-center mt-4">
			<button class="bg-green-600 text-white px-6 py-3 rounded hover:bg-green-500 mt-2 font-bold">
				Comprar
			</button>
		</div>
	</div>
</BaseLayout>