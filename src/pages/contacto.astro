---
import BaseLayout from "../layouts/BaseL.astro";
import { MdEmail } from "react-icons/md";
import { TiSocialFacebook } from "react-icons/ti";
import { SlSocialInstagram } from "react-icons/sl";
import { FaXTwitter, FaHouse } from "react-icons/fa6";
import { Image } from "astro:assets"; /* Esto es necesario para las imagenes */
/* import ImageFondo from "@assets/logo2.png"; */ /* Aqui las imagenes */
---

<BaseLayout>
  <main class="flex flex-col items-center p-8">
    <h1 class="text-5xl font-extrabold text-green-700 mb-10">CONTÁCTANOS</h1>
    <div class="my-2">
      <div
        class="grid sm:grid-cols-2 items-center gap-16 p-8 mx-auto max-w-4xl bg-white shadow-[0_2px_10px_-3px_rgba(6,81,237,0.3)] rounded-md text-[#333] font-[sans-serif]"
      >
        <div>
          <h1 class="text-2xl font-extrabold">Envía un mensaje</h1>
          <p class="text-sm text-gray-400 mt-3">
            Si tienes alguna duda, envía un mensaje a nuestro correo
            electrónico. Con gusto te atenderemos
          </p>
          <div class="mt-12">
            <h2 class="text-lg font-extrabold">Email</h2>
            <ul class="mt-3">
              <li class="flex items-center">
                <div
                  class="bg-[#e6e6e6cf] h-10 w-10 rounded-full flex items-center justify-center shrink-0"
                >
                  <MdEmail className="size-6 text-green-700" />
                </div>
                <a
                  target="blank"
                  href="https://mail.google.com"
                  class="text-green-700 text-sm ml-3 hover:text-green-500"
                >
                  <small class="block">Gmail</small>
                  <strong>asfelh@gmail.com</strong>
                </a>
              </li>
            </ul>
          </div>
          <div class="mt-12">
            <h2 class="text-lg font-extrabold">Socials</h2>
            <ul class="flex mt-3 space-x-4">
              <li
                class="bg-[#e6e6e6cf] h-10 w-10 rounded-full flex items-center justify-center shrink-0"
              >
                <a href="https://www.cuautla.tecnm.mx/" target="blank">
                  <FaHouse
                    className="size-5 text-green-700 hover:text-green-500"
                  />
                </a>
              </li>
              <li
                class="bg-[#e6e6e6cf] h-10 w-10 rounded-full flex items-center justify-center shrink-0"
              >
                <a href="https://www.facebook.com/" target="blank">
                  <TiSocialFacebook
                    className="size-7 text-green-700 hover:text-green-500"
                  />
                </a>
              </li>
              <li
                class="bg-[#e6e6e6cf] h-10 w-10 rounded-full flex items-center justify-center shrink-0"
              >
                <a href="https://www.instagram.com/" target="blank">
                  <SlSocialInstagram
                    className="size-5 text-green-700 hover:text-green-500"
                  />
                </a>
              </li>
              <li
                class="bg-[#e6e6e6cf] h-10 w-10 rounded-full flex items-center justify-center shrink-0"
              >
                <a href="https://x.com/" target="blank">
                  <FaXTwitter
                    className="size-5 text-green-700 hover:text-green-500"
                  />
                </a>
              </li>
            </ul>
          </div>
        </div>

        <form class="ml-auo space-y-4">
          <input
            type="text"
            placeholder="Nombre:"
            class="w-full rounded-md py-2.5 px-4 border text-sm outline-[#007bff]"
          />
          <input
            type="email"
            placeholder="Email:"
            class="w-full rounded-md py-2.5 px-4 border text-sm outline-[#007bff]"
          />
          <input
            type="text"
            placeholder="Teléfono:"
            class="w-full rounded-md py-2.5 px-4 border text-sm outline-[#007bff]"
          />
          <textarea
            placeholder="Mensaje:"
            rows="6"
            class="w-full rounded-md px-4 border text-sm pt-2.5 outline-[#007bff]"
          ></textarea>
          <button
            type="button"
            class="text-white bg-green-700 hover:bg-green-500 font-semibold rounded-md text-sm px-4 py-2.5 w-full"
          >
            ENVIAR
          </button>
        </form>
      </div>
    </div>
  </main>
</BaseLayout>
